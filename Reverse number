#include <stdio.h>

int NumRev(int No){
  int rev=0;
  while(No != 0){
    rev = rev * 10 + (No % 10);
    No = No / 10;
  }
  return rev;
}

int main(){
  int val=0, res=0;
  printf("Enter the no.");
  scanf("%d", &val);
  res = NumRev(val);
  printf("The reverse of %d is %d", val , res);
  return 0;
}
