#include <stdio.h>

int NumForm(int iNo){
  int count[10] = {0};

  while(iNo > 0){
    int digit = iNo % 10;
    count[digit]++;
    iNo = iNo / 10;
  }

  int newNum = 0;
  for(int i=0 ; i<10 ; i++){
    while(count[i] > 0){
      newNum = newNum * 10 + i;
      count[i]--;
    }
  }
  return newNum;
}
int main(){
  int iVal = 0;
  int iRes = 0;
  printf("Enter the number ");
  scanf("%d", &iVal);
  iRes = NumForm(iVal);
  printf("Number is = %d", iRes);
  return 0;
}
